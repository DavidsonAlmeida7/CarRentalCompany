@model IEnumerable<CarRentalCompany.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create"><i class="fas fa-plus"></i> Novo Cliente</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.DataNascimento)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.SalarioBase)</th>
            <th scope="col" class="text-center">Ação</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr class="table-dark">
            <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
            <td>R$ @Html.DisplayFor(modelItem => item.SalarioBase)</td>
            <td class="row">
                <div class="col">
                    <a asp-action="Details" asp-route-id="@item.Id" title="Detalhes" class="btn btn-link"><i class="fas fa-eye fa-lg text-info"></i></a>
                </div>
                <div class="col">
                    <a asp-action="Edit" asp-route-id="@item.Id" title="Editar" class="btn btn-link"><i class="fas fa-edit fa-lg text-primary"></i></a>
                </div>
                <div class="col">
                    <form 
                        method="post" 
                        asp-action="Delete" 
                        asp-route-id="@item.Id" 
                        title="Deletar"
                        onclick="return confirm('Deseja realmente excluir esse Cliente?')">
                        <input type="hidden" asp-for="@item.Id" />
                        <button type="submit" class="btn btn-link"><i class="fas fa-trash-alt text-danger"></i></button>
                    </form>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
