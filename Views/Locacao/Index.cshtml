@model IEnumerable<CarRentalCompany.Models.Locacao>

@{
    ViewData["Title"] = "Reservas";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Status)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Valor)</th>
            <th scope="col">Tempo da reserva</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Cliente)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Veiculo)</th>
            <th scope="col" class="text-center">Detalhes</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr class="table-dark">
            <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
            <td>@Html.DisplayFor(modelItem => item.Status)</td>
            <td>R$ @Html.DisplayFor(modelItem => item.Valor)</td>
            <td>1 mês</td>
            <td>@Html.DisplayFor(modelItem => item.Cliente.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Veiculo.Modelo)</td>
            <td class="row text-center">
                <div class="col">
                    <a asp-action="Details" asp-route-id="@item.Id" title="Detalhes" class="btn btn-link"><i class="fas fa-eye fa-lg text-info"></i></a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
