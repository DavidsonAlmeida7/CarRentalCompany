@using CarRentalCompany.Models.Enums
@model CarRentalCompany.Models.Veiculo

@{
    ViewData["Title"] = "Veículo";
    ViewData["Acao"] = "Editar";
}

<h1>@ViewData["Acao"]</h1>

<h4>@ViewData["Title"]</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="form-group mt-2">
                <label asp-for="Tipo" class="form-label"></label>
                <select asp-for="Tipo" asp-items="@Html.GetEnumSelectList<VeiculoTipo>()" class="form-select">
                    <option selected="selected" value="">-- Selecione o tipo --</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Modelo" class="form-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="form-label mt-2"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Cor" class="form-label"></label>
                <select asp-for="Cor" asp-items="@Html.GetEnumSelectList<VeiculoCor>()" class="form-select">
                    <option selected="selected" value="">-- Selecione a cor --</option>
                </select>
                <span asp-validation-for="Cor" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Valor" class="form-label"></label>
                <input asp-for="Valor" class="form-control" type="number" step=".01" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="DescricaoDetalhes" class="form-label"></label>
                <textarea asp-for="DescricaoDetalhes" class="form-control" rows="4" cols="50"></textarea>
                <span asp-validation-for="DescricaoDetalhes" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ImageFile" class="form-label"></label>
                <input class="form-control" type="file" asp-for="ImageFile" accept="image/*">
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
