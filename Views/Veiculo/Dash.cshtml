@model IEnumerable<CarRentalCompany.Models.Veiculo>

@{
    ViewData["Title"] = "Reserve agora";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="row">
@foreach (var item in Model) {
    if (item.Alugado)
    {
        <div class="col-4" style="pointer-events: none; opacity: 0.4;">
            <div class="card border-primary mb-3" style="max-width: 20rem;">
                <div class="card-header">@Html.DisplayFor(modelItem => item.Tipo)</div>
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.Modelo)</h4>
                    <img src="~/images/@Html.DisplayFor(modelItem => item.Imagem)" class="rounded float-left" alt="..." style="width: 280px; height: 170px;">

                    <div class="accordion mt-2" id="accordionExample_@Html.DisplayFor(modelItem => item.Id)">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingOne_@Html.DisplayFor(modelItem => item.Id)">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne_@Html.DisplayFor(modelItem => item.Id)" aria-expanded="false" aria-controls="collapseOne_@Html.DisplayFor(modelItem => item.Id)">
                                    Indisponível
                                </button>
                            </h2>
                            <div id="collapseOne_@Html.DisplayFor(modelItem => item.Id)" class="accordion-collapse collapse" aria-labelledby="headingOne_@Html.DisplayFor(modelItem => item.Id)" data-bs-parent="#accordionExample_@Html.DisplayFor(modelItem => item.Id)" style="">
                                <div class="accordion-body">
                                    <p class="card-text">@Html.DisplayFor(modelItem => item.DescricaoDetalhes)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <a asp-controller="Locacao" asp-action="Reserve" asp-route-id="@item.Id" class="btn btn-success mt-3">Reservar</a>
                </div>
            </div>
        </div>
    } else 
    {
        <div class="col-4">
            <div class="card border-primary mb-3" style="max-width: 20rem;">
                <div class="card-header">@Html.DisplayFor(modelItem => item.Tipo)</div>
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.Modelo)</h4>
                    <img src="~/images/@Html.DisplayFor(modelItem => item.Imagem)" class="rounded float-left" alt="..." style="width: 280px; height: 170px;">

                    <div class="accordion mt-2" id="accordionExample_@Html.DisplayFor(modelItem => item.Id)">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingOne_@Html.DisplayFor(modelItem => item.Id)">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne_@Html.DisplayFor(modelItem => item.Id)" aria-expanded="false" aria-controls="collapseOne_@Html.DisplayFor(modelItem => item.Id)">
                                    Mais detalhes...
                                </button>
                            </h2>
                            <div id="collapseOne_@Html.DisplayFor(modelItem => item.Id)" class="accordion-collapse collapse" aria-labelledby="headingOne_@Html.DisplayFor(modelItem => item.Id)" data-bs-parent="#accordionExample_@Html.DisplayFor(modelItem => item.Id)" style="">
                                <div class="accordion-body">
                                    <p class="card-text">@Html.DisplayFor(modelItem => item.DescricaoDetalhes)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <a asp-controller="Locacao" asp-action="Reserve" asp-route-id="@item.Id" class="btn btn-success mt-3">Reservar</a>
                </div>
            </div>
        </div>
    }
}
</div>
